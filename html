  <div class="container">
    <h1 class="neon-text">The Lee-gul Kween's Courtroom</h1>
    <h2 class="neon-text">Oh huney, what's your lee-gul enquiry?</h2>
    <div class="lee-gul-box">
      <input type="text" id="leeGulInput" placeholder="Serve us your legal tea, darling!">
      <button id="leeGulButton">Summon Annaturnee Cownsell</button>
    </div>
    <div id="leeGulResults"></div>
  </div>

  <script>
    document.getElementById('leeGulButton').addEventListener('click', performLeeGulSearch);

    function performLeeGulSearch() {
      const query = document.getElementById('leeGulInput').value;
      if (!query) return;

      const leeGulResultsDiv = document.getElementById('leeGulResults');
      leeGulResultsDiv.innerHTML = '<h2 class="neon-text">Serving Lee-gul Realness...</h2>';

      setTimeout(() => {
        const leeGulResponses = generateLeeGulResponses(query);
        displayLeeGulResponses(leeGulResponses);
      }, 2000);
    }

    function generateLeeGulResponses(query) {
      return [
        {
          name: "Phi Phi O'Legal",
          image: "https://i.imgur.com/hyperreal_phiphi.jpg",
          relation: "The glittery 2nd cousin twice removed of Phi Phi O'Hara",
          response: `Honey, your enquiry <span class="enquiry">"${query}"</span> is messier than my relationship with Sharon Needles! But let me school you on some Equality Act realness. Section 13 says you can't be treating folks different 'cause of their protected characteristics. That's direct discrimination, baby!`,
          citation: "Equality Act 2010, c. 15, s. 13",
          catchyQuote: "When the shade is too real, Section 13 makes the tea spill!"
        },
        {
          name: "Sharon Law-dles",
          image: "https://i.imgur.com/hyperreal_sharon.jpg",
          relation: "The fabulous outcast sister of Sharon Needles (she got all the misters)",
          response: `Child, your question <span class="enquiry">"${query}"</span> is giving me more drama than a spooky queen in daylight! Now, Section 19 of the Equality Act is all about that indirect discrimination. It's when a policy hits a protected group harder than others, even if it looks fair on the surface.`,
          citation: "Equality Act 2010, c. 15, s. 19",
          catchyQuote: "When the rules seem fair but the game ain't square, Section 19 brings the scare!"
        },
        {
          name: "Alyssa Subpoenas",
          image: "https://i.imgur.com/hyperreal_alyssa.jpg",
          relation: "The long-lost twin sister of Alyssa Edwards (separated at birth by a rogue choreographer)",
          response: `Oh honey, honey! Your legal tea <span class="enquiry">"${query}"</span> is hotter than a Texas rodeo in July! Now, let mama Alyssa tell you about Section 27. It's all about victimisation, darling. Can't be treating someone badly 'cause they complained about discrimination or helped someone else who did.`,
          citation: "Equality Act 2010, c. 15, s. 27",
          catchyQuote: "Be washin' ma hands with sanitisation, be rememberin' me Section 27 what constitutes victimisation - hellup Equality Act!"
        }
      ];
    }

    function displayLeeGulResponses(responses) {
      const leeGulResultsDiv = document.getElementById('leeGulResults');
      leeGulResultsDiv.innerHTML = '';

      responses.forEach(response => {
        const responseElement = document.createElement('div');
        responseElement.className = 'lee-gul-response';
        responseElement.innerHTML = `
          <h3 class="lee-gul-title">${response.name} Serves Justice</h3>
          <img src="${response.image}" alt="${response.name}" class="queen-image">
          <p><i>${response.relation}</i></p>
          <p class="lee-gul-content">${response.response}</p>
          <p class="citation">${response.citation}</p>
          <p class="catchy-quote">${response.catchyQuote}</p>
        `;
        leeGulResultsDiv.appendChild(responseElement);
      });

      // Add the summary poem and copy button
      const summaryElement = document.createElement('div');
      summaryElement.innerHTML = `
        <h3>Sashay Away with These Lee-gul Gems</h3>
        <p>
        Phi Phi's Section 13, no shade allowed on the scene,<br>
        Sharon's 19, indirect bias makes her scream,<br>
        Alyssa's 27, victimisation's not her dream,<br>
        Remember these rules and you'll be the Equality Queen!
        </p>
        <button id="copyButton" class="copy-button">Copy Statutes and Slay</button>
      `;
      leeGulResultsDiv.appendChild(summaryElement);

      document.getElementById('copyButton').addEventListener('click', () => {
        const statuteCard = document.createElement('div');
        statuteCard.className = 'statute-card';
        statuteCard.innerHTML = `
          <h3>Your Equality Act Slay Card</h3>
          <p>${responses[0].citation} - ${responses[0].catchyQuote}</p>
          <p>${responses[1].citation} - ${responses[1].catchyQuote}</p>
          <p>${responses[2].citation} - ${responses[2].catchyQuote}</p>
          <p>
          Phi Phi's 13, no shade on the scene,<br>
          Sharon's 19, indirect bias makes her scream,<br>
          Alyssa's 27, victimisation's not her dream,<br>
          Slay with these rules, Equality Queen!
          </p>
        `;
        leeGulResultsDiv.appendChild(statuteCard);

        html2canvas(statuteCard).then(canvas => {
          const link = document.createElement('a');
          link.download = 'EqualityActSlayCard.png';
          link.href = canvas.toDataURL();
          link.click();
        });
      });
    }
  </script>
  <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
