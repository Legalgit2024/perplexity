<body>
    <div class="card" onclick="showMainView(this)">
        <img src="your-image-url.jpg" alt="Card Image">
        <div class="card-content">
            <h2>JUSTICE MINDS VS AVISON YOUNG</h2>
            <p>Several of the alleged violations by Avison Young are rooted in statutory law and case law precedents...</p>
        </div>
    </div>
    <!-- Repeat similar card structure as needed -->

    <div class="main-view" id="mainView">
        <button class="close-btn" onclick="closeMainView()">Ã—</button>
        <div class="card" id="mainCard">
            <img src="your-image-url.jpg" alt="Card Image">
            <div class="card-content">
                <h2>JUSTICE MINDS VS AVISON YOUNG</h2>
                <p>Several of the alleged violations by Avison Young are rooted in statutory law and case law precedents...</p>
                <!-- Repeat the content as needed -->
            </div>
        </div>
    </div>

    <script>
        function showMainView(card) {
            var mainView = document.getElementById('mainView');
            var mainCard = document.getElementById('mainCard');

            // Copy content from the clicked card to the main view card
            mainCard.innerHTML = card.innerHTML;

            // Show the main view
            mainView.classList.add('active');
        }

        function closeMainView() {
            var mainView = document.getElementById('mainView');
            mainView.classList.remove('active');
        }
    </script>
</body>
